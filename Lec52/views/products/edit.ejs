<% layout('layouts/boilerplate') %>
<%-include('../partials/navbar') %>
    <div class="row">
        <div>
            <form action="/products/<%=foundProduct._id%>?_method=PATCH" method="POST">

                <div class="mb-3 mx-auto">
                     <label for="naam">Name:</label>
                     <input type="text" class="form-control" name="name" id="naam" placeholder="Name of the product" value="<%=foundProduct.name%>">
                     
                     <label for="img">Image:</label>
                     <input type="text" class="form-control" name="img" id="img" placeholder="Image URL of the product" value="<%=foundProduct.img%>">

                     <label for="paisa">Price:</label>
                     <input type="text" class="form-control" name="price" id="paisa" placeholder="Add Price of the product" value="<%=foundProduct.price%>">

                     <label for="description">Description:</label>
                     <textarea type="text" class="form-control" name="description" id="description"  placeholder="Description of the product">
                        <%=foundProduct.description%>
                     </textarea>
                     
                    <button class="btn btn-success" type="submit">Edit Product</button>
                </div>
            </form>
        </div>        
    </div>
    
    </body>

    </html>